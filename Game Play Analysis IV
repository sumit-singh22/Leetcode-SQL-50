WITH player_logins AS (
    SELECT
        player_id,
        event_date,
        ROW_NUMBER() OVER (
            PARTITION BY player_id
            ORDER BY event_date
        ) AS rn,
        LEAD(event_date) OVER (
            PARTITION BY player_id
            ORDER BY event_date
        ) AS next_date
    FROM Activity
)
SELECT 
    IFNULL(
        ROUND(
            SUM(next_date = DATE_ADD(event_date, INTERVAL 1 DAY)) 
            / COUNT(*),
            2
        ),
        0
    ) AS fraction
FROM player_logins
WHERE rn = 1;
